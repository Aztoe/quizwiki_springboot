<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.multi.quizwiki.qboard.dao.QboardLikeMapper">
	<sql id="LikeColumns">
		id
		,qboard_id
		,member_id
	</sql>
	
	<!-- 좋아요 저장 -->
	<insert id="addLike" parameterType="like">
		insert into qboard_like (
		<include refid="LikeColumns"/>
		) VALUES (
			#{id}
			,#{qboard_id}
			,#{member_id}
			
		)
	</insert>
	<!-- 좋아요 개수 -->
	<select id="getLike" parameterType="Long" resultType="like">
		SELECT *
		FROM qboard_like
		WHERE qboard_id =#{qboard_id}
	</select>
	<!-- 좋아요 여부 확인 -->
	<select id="isLike" parameterType="like" resultType="int">
		select count(*)
		from qboard_like
		where qboard_id =#{qboard_id}
		AND member_id =#{member_id}	
		
	</select>
	<!-- 좋아요 삭제 -->
	<delete id="deleteLike" parameterType="Long">
		
		DELETE  
		FROM qboard_like	
		WHERE 
			qboard_id =#{qboard_id}
		AND 
			member_id =#{member_id}	
	</delete>
 
</mapper>